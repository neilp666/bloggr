<% if @post.errors.any? %>
  <ol>
   <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ol>
<% end %>


<%= form_for @post do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :body %><br>
  <%= f.text_area :body %><br>

  <%= f.submit %>

<% end %>

