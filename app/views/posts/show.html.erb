<p><%= @post.body %></p><br>
<p><%= @post.title %></p><br>


<p><%= link_to 'Edit', edit_post_path(@post) %>
<p><%= link_to 'Back', posts_path %></p>


<h2>All comments</h2>

<%= render @post.comments.order("created_at DESC") %>

<h2>Leave a comment</h1>


<%= form_for [@post, @post.comments.build] do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %>

  <%= f.label :body %><br>
  <%= f.text_field :body %>

  <%= f.submit %>
<% end %>







