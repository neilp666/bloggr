<header class="intro-header header2" >
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><%= @post.title %></h1>
                        
                        <span class="meta"><%= link_to 'Edit',edit_post_path(@post) %> /
                        <%= link_to 'Back', posts_path %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </header>



    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                  <p>
                    <%= @post.body %>

                    <hr>
                    <h2>All Comments</h2>

                    </hr>
                  </p>
                </div>
                <h2>All comments</h2>

<%= render @post.comments.order("created_at DESC") %>

<h2>Leave a comment</h1>


<%= form_for [@post, @post.comments.build] do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %>

  <%= f.label :body %><br>
  <%= f.text_field :body %>

  <%= f.submit %>
<% end %>
  







            </div>
        </div>
      </article>
  



