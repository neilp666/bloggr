<header class="intro-header header2" >
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><%= @post.title %></h1>
                        
                        <span class="meta"><%= link_to 'Back',post_path(@post) %> |
                          <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are You Sure You want to delete ths post?"} %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                  <%= render 'form' %>
                </div> 
            </div>
        </div>
   </article>


